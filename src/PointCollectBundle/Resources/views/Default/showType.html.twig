{% extends 'layoutadmin.html.twig' %}
{% block title %} Eco System {% endblock %}

{% block Containt %}
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                Type point de collecte
                <small></small>
            </h1>
            <ol class="breadcrumb">
                <li><a href="{{ path('homepageadmin') }}"><i class="fa fa-dashboard"></i> Accueil</a></li>
                <li><a href="{{ path('showTypePointCollect') }}">Gestion point de collecte</a></li>
                <li class="active">Consulter type point collecte</li>
            </ol>
        </section>
        <!--   <div  class="col-md-1">
               <button type="button" class="btn btn-block btn-default" ">Ajouter</button>
           </div>-->
        <section class="content">

            <div class="box box-default">
                <div class="box-header with-border">
                    <h3 class="box-title">Saisir type adresse</h3>

                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                        <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i></button>
                    </div>
                </div>
                <div class="box-body">
                    <div class="row">
                        <div class="col-md-12">

                            <!-- /.form-group -->

                            <!--  <form action="" class="form">-->
                            {{ form_start(form) }}
                            <div class="form-group">
                                <label for="form-full-address">Type de l'emplacement</label>
                                <!--<input disabled="disabled" autocomplete="off" type="text" class="form-control" id="form-full-address" value="" />-->
                                {{ form_widget(form.name) }}
                            </div>



                            <div class="form-group">
                                <!--   <button type="button" class="btn btn-primary">Primary</button>-->
                                {{ form_widget(form.submit, { 'label': 'Ajouter' }) }}
                            </div>
                            {{ form_end(form) }}
                            <!--  </form>-->

                            <!-- /.form-group -->
                        </div>

                    </div>
                    <!-- /.row -->
                </div>
                <!-- /.box-body -->
                <div class="box-footer">
                    <!--  Visit <a href="https://select2.github.io/">Select2 documentation</a> for more examples and information about
                      the plugin.-->
                </div>
            </div>

            <div class="row">
                <div class="col-xs-12">
                    <div class="box">
                        <div class="box-header">
                            <h3 class="box-title">Type des adresses points de collecte</h3>
                        </div>
                        <!-- /.box-header -->
                        <div class="box-body">
                            <table id="example1" class="table table-bordered table-striped">
                                <thead>
                                <tr>
                                    <th>Nom</th>

                                    <th>Action</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for entity in locationPoint %}
                                    <tr>
                                        <td>{{ entity.name }}</td>

                                        <td>

                                                <a data-toggle="modal" data-target="#exampleModal" onclick="onPressDelete ({{ entity.id }})" >
                                                <div class="col-md-3 col-sm-4">
                                                    <i class="material-icons" >&#xE872;</i>
                                                    <span class="text-muted"></span>
                                                </div>
                                            </a>

                                            <a href="{{ path('updateTypePointCollect', { 'id': entity.id }) }}">
                                                <div class="col-md-3 col-sm-4"><i class="material-icons">&#xe923;</i></div>
                                            </a>

                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                                <tfoot>

                                </tfoot>
                            </table>

                        </div>
                        <!-- /.box-body -->
                    </div>
                </div>
            </div>
        </section>
    </div>
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header" style="background-color: #ff6b6b">
                    <h5 class="modal-title" id="exampleModalLabel">Supprimer un type point collecte</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Voulez-vous bien supprimer ce type ?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                    <a   class="btn btn-primary" href="" id="btnDelete" style="background-color: #ff6b6b; border-color: white">Supprimer</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script>
        function onPressDelete (id )
        {
            newLien = '/deleteTypePointCollect/' + id;
            document.getElementById('btnDelete').href = newLien;
        }

    </script>

{% endblock %}
