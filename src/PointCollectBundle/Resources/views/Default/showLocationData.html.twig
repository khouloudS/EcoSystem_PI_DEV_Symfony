{% extends 'layoutadmin.html.twig' %}
{% block title %} Eco System {% endblock %}

{% block Containt %}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Point de collecte
            <small></small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="{{ path('homepageadmin') }}"><i class="fa fa-dashboard"></i> Accueil</a></li>
            <li><a href="{{ path('showLocationData') }}">Gestion point de collecte</a></li>
            <li class="active">Consulter point collecte</li>
        </ol>
    </section>
 <!--   <div  class="col-md-1">
        <button type="button" class="btn btn-block btn-default" ">Ajouter</button>
    </div>-->
    <section class="content">

    <div class="row">
        <div class="col-xs-12">
                <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Addresse des points de collecte</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                        <tr>
                            <th>Nom</th>
                            <th>Addresse</th>
                            <th>Type</th>
                           <!-- <th>Latitude</th>
                            <th>Longitude</th>-->
                            <th>Action</th>
                        </tr>
                        </thead>
                         <tbody>
                         {% for entity in locationPoint %}
                        <tr>
                            <td>{{ entity.name }}</td>
                            <td>{{ entity.address }}</td>
                            <td>{{ entity.typePointCollect }}</td>
                            <!--<td>{{ entity.lat }}</td>
                            <td>{{ entity.lng }}</td>-->
                            <td>
                                <a data-toggle="modal" data-target="#exampleModal" onclick="onPressDelete ({{ entity.slug }})" >
                                <div class="col-md-3 col-sm-4"> <i class="material-icons" >&#xE872;</i>
                                    <span class="text-muted"></span>
                                </div>
                                </a>
                                <a href="{{ path('updateLocation', { 'id': entity.slug }) }}">
                                    <div class="col-md-3 col-sm-4"><i class="material-icons">&#xe923;</i></div>
                                </a>
                                <a href="{{ path('showDetailsLocations', { 'id': entity.slug }) }}">
                                    <div class="col-md-3 col-sm-4"><i class="fa fa-fw fa-map-marker"></i></div>
                                </a>
                            </td>
                        </tr>
                        {% endfor %}
                         </tbody>
                         <tfoot>

                         </tfoot>
                    </table>

                 </div>
                                                            <!-- /.box-body -->
                </div>
                </div>
                 </div>
    </section>
</div>
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header" style="background-color: #ff6b6b">
                    <h5 class="modal-title" id="exampleModalLabel">Supprimer une adresse</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Voulez-vous bien supprimer cette adresse ?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                    <a   class="btn btn-primary" href="" id="btnDelete" style="background-color: #ff6b6b; border-color: white">Supprimer</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script>
        function onPressDelete (id )
        {
            newLien = '/deleteLocation/' + id;
            document.getElementById('btnDelete').href = newLien;
        }

    </script>

{% endblock %}

